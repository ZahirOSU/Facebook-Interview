#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int *findSignatureCounts(int arr[], int length) {
        int* res = (int*) malloc (sizeof(int)*(length));
        int i,j; 
        for(int i=0;i<length;i++)
          res[i]=1;
         
        
        for (i = 0; i < length; i++) {
            j = arr[i] - 1;
            while (arr[i] != arr[j]) {
                res[i]++;
                j = arr[j] - 1;
            }
        }
        return res;
    }

// To execute C, please define "int main()"

int main() {
    int *p;
    int numbers[2] = {1, 2};
    int numbersSize = 2;
     
     
  
    p= findSignatureCounts(numbers, numbersSize);
    
    printf("%d %d",*p, *(p+1));
    return 0;
}


